<h1>{{repository.name}}</h1>
<p>{{repository.description}}</p>
<form action="/update/{{repository._id}}" method="POST"><button>Modificar</button></form>
{{#if update}}
  <form action="/update-repository/{{repository._id}}" method="POST">
    <label for="">Nombre: </label>
    <input type="text" name="name" value="{{repository.name}}">
    <label for="">Descripción: </label>
    <input name="description" id="" cols="30" rows="10" value="{{repository.description}}"></input>
    <button type="submit">Actualizar</button>
  </form>
{{/if}}
<h3>Documents</h3>
<ul>
  {{#each documents}}
    <ol>{{this.name}}-{{this.created_at}} <a href="{{this._id}}">Cargar nueva version</a> </ol>
  {{/each}}
</ul>
<button>Subir Documento</button>
<a href="/new-document/{{repository.id}}"> <button>Crear documento</button></a>
